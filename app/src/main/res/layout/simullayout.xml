<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="30dp" android:gravity="center"
    android:background="#222222">

    <TextView
        android:id="@+id/txtNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="표적"
        android:textSize="35sp"
        android:textColor="#f0f0f0"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_sheld"
        android:id="@+id/progressSheld"
        android:indeterminateTint="#3B3B7C"
        android:layerType="software"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingTop="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_health"
        android:id="@+id/progressHealth"
        android:indeterminateTint="#ff0000"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="방어도 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtSheld"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="생명력 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtHealth"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="현재 데미지 : "
            android:textSize="25sp"
            android:textColor="#AAAAAA"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtNowDemage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#f0f0f0"
            android:textSize="25sp"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_ammo"
        android:id="@+id/progressAmmo"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:indeterminateTint="#E45435"/>
    <TextView
        android:id="@+id/txtAmmo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:textColor="#f0f0f0"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgBoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boom"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/imgCritical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/critical"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/imgHeadshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headshot"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtStatue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="now statue"
        android:textSize="15sp"
        android:textColor="#f0f0f0"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="사용한 탄수 : "
            android:textSize="20sp"
            android:textColor="#AAAAAA"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtAllAmmo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="시간 : "
            android:textSize="20sp"
            android:textColor="#AAAAAA"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0초"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="누적 데미지 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtAdddemage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutQuickhand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="빠른 손 히트 수 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtQuickhand"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnExit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonsimulcustom"
        android:text="강제 종료"
        android:textSize="20sp"
        android:textColor="#f0f0f0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/critical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 치명타, "
            android:textSize="20sp"
            android:textColor="#f0f0f0"
            android:layout_marginLeft="3dp"/>
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/headshot"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 헤드샷, "
            android:textSize="20sp"
            android:textColor="#f0f0f0"
            android:layout_marginLeft="3dp"/>
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/boom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 폭발탄 "
            android:textSize="20sp"
            android:textColor="#f0f0f0"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

</LinearLayout>