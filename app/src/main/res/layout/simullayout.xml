<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="30dp" android:gravity="center">

    <TextView
        android:id="@+id/txtNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="표적"
        android:textSize="35sp"
        android:textColor="#000000"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_sheld"
        android:id="@+id/progressSheld"
        android:indeterminateTint="#3B3B7C"
        android:layerType="software"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingTop="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_health"
        android:id="@+id/progressHealth"
        android:indeterminateTint="#ff0000"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="방어도 : "
            android:textSize="20sp"
            android:textColor="#000000"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtSheld"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="생명력 : "
            android:textSize="20sp"
            android:textColor="#000000"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtHealth"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="현재 데미지 : "
            android:textSize="25sp"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtNowDemage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:textSize="25sp"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_ammo"
        android:id="@+id/progressAmmo"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:indeterminateTint="#E45435"/>
    <TextView
        android:id="@+id/txtAmmo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txtStatue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="now statue"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="사용한 탄수 : "
            android:textSize="20sp"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtAllAmmo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="시간 : "
            android:textSize="20sp"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0초"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="누적 데미지 : "
            android:textSize="20sp"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtAdddemage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutQuickhand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="빠른 손 히트 수 : "
            android:textSize="20sp"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txtQuickhand"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </LinearLayout>



</LinearLayout>