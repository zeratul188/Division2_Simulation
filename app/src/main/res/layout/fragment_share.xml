<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2">

    <!--<TextView
        android:id="@+id/text_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:layout_marginBottom="10dp">
                            <Button
                                android:id="@+id/btnLitezone"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="70dp"
                                android:text="라이트존"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:padding="10dp"
                                android:background="@drawable/buttoncustom"
                                android:layout_marginRight="5dp"/>
                            <Button
                                android:id="@+id/btnDarkzone"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="70dp"
                                android:text="다크존"
                                android:padding="10dp"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:background="@drawable/buttoncustom"
                                android:layout_marginLeft="5dp"/>
                        </TableRow>
                        <TableRow
                            android:layout_marginBottom="10dp">
                            <Button
                                android:id="@+id/btnRaid"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="70dp"
                                android:text="레이드 (칠흑의 시간)"
                                android:textSize="20sp"
                                android:padding="10dp"
                                android:textColor="#000000"
                                android:background="@drawable/buttoncustom"
                                android:layout_marginRight="5dp"/>
                            <Button
                                android:id="@+id/btnRaidbox"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="70dp"
                                android:text="레이드 추가 박스"
                                android:textSize="20sp"
                                android:padding="10dp"
                                android:textColor="#000000"
                                android:background="@drawable/buttoncustom"
                                android:layout_marginLeft="5dp"/>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="장비 나온 갯수"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/buttoncustom"
                        android:padding="10dp">
                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="특급 : "
                                android:textSize="20sp"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:id="@+id/txtSpecial"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:text="0"
                                android:textSize="20sp"
                                android:textColor="#000000"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="네임드 : "
                                android:textSize="20sp"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:id="@+id/txtNamed"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:text="0"
                                android:textSize="20sp"
                                android:textColor="#000000"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="기어 장비 : "
                                android:textSize="20sp"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:id="@+id/txtGear"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:text="0"
                                android:textSize="20sp"
                                android:textColor="#000000"/>1%
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="기타 장비 : "
                                android:textSize="20sp"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:id="@+id/txtBrand"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:text="0"
                                android:textSize="20sp"
                                android:textColor="#000000"/>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttoncustom"
                        android:text="라이트존 : \n특급 : 1%, 네임드 : 3%\n다크존 : \n특급(역병) : 1.5%, 네임드 : 3%\n레이드 (칠흑의 시간) : \n특급(독수리를 거느린 자 포함) : 1.5%, 네임드 : 4%\n레이드 추가 박스 :\n'독수리를 거느린자' 10% 확률로 추가\n특급 (독수리를 거느린 자 제외하고 라이트 존 특급만 포함) : 1%, 네임드 : 3%"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="15dp">
            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="초기화"
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="10dp"
                android:background="@drawable/buttoncustom"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btnOutput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="이송하기 (0/10)"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:padding="10dp"
                android:background="@drawable/buttonmaincustom"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>