<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<TextView
        android:id="@+id/text_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/btnLitezone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="라이트존"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttoncustomsheld"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnDarkzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다크존"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttoncustomsheld"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnRaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레이드 (칠흑의 시간)"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttoncustomsheld"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnRaidbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레이드 추가 박스"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttoncustomsheld"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="징비 나온 갯수"
            android:textColor="#000000"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="특급 : "
                    android:textSize="20sp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/txtSpecial"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="네임드 : "
                    android:textSize="20sp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/txtNamed"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="기어 장비 : "
                    android:textSize="20sp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/txtGear"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="기타 장비 : "
                    android:textSize="20sp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/txtBrand"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>