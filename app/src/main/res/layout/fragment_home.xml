<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!--<TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="무기 시뮬레이션"
        android:textSize="25sp"
        android:padding="10dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 소수점 첫째짜리까지만 입력해주세요.\n- 상대는 펄스 적용된 상태"
        android:textSize="15sp"
        android:paddingLeft="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtNickname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Nickname"
                        android:maxLength="15"
                        android:textSize="15sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="무기 데미지"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="RPM"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtWeaponDemage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="0 ~ 999999999"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edtRPM"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text=""
                        android:hint="0~9999"
                        android:maxLength="4"
                        android:textSize="15sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="치명타 확률 (%)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="치명타 데미지 (%)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtCritical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~100"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edtCriticalDemage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~999.9"
                        android:maxLength="5"
                        android:textSize="15sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="헤드샷 확률 (%)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="헤드샷 데미지 (%)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtHeadshot"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~100"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edtHeadshotDemage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~999.9"
                        android:maxLength="5"
                        android:textSize="15sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="정예 대상 데미지 (%)"
                        android:textSize="19sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="방어도 데미지 (%)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtEliteDemage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~999.9"
                        android:maxLength="5"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edtSheldDemage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~999.9"
                        android:maxLength="5"
                        android:textSize="15sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="생명력 데미지 (%)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="재장전 속도 (초)"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtHealthDemage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~999.9"
                        android:maxLength="5"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/edtReload"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:hint="0~600"
                        android:maxLength="4"
                        android:textSize="15sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="탄수"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/edtAmmo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text=""
                        android:hint="0~99999"
                        android:maxLength="5"
                        android:textSize="15sp"/>
                </TableRow>
            </TableLayout>
            <CheckBox
                android:id="@+id/chkCrazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="광분 여부"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <RadioGroup
                android:id="@+id/rgCrazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rdoCrazy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 0 (dmg +0%, 방어도 80% 초과)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoCrazy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 1(dmg +10%, 방어도 60% 초과 80% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoCrazy3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 2(dmg +20%, 방어도 40% 초과 60% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoCrazy4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 3(dmg +30%, 방어도 20% 초과 40% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoCrazy5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 4(dmg +40%, 방어도 0% 초과 20% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoCrazy6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 5(dmg +50%, 방어도 0%)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            </RadioGroup>
            <CheckBox
                android:id="@+id/chkSeeker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="감시병 여부 (펄스 강조된 데미지 20% 증가)"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <CheckBox
                android:id="@+id/chkBoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="무자비 수납(5% 확률로 무기데미지 +100% 증가된 폭발탄)"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <CheckBox
                android:id="@+id/chkEagle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="집념 효과 여부(무기 데미지 +35%)"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <CheckBox
                android:id="@+id/chkPush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중압감 여부"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <RadioGroup
                android:id="@+id/rgPush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rdoPush1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 0 (critical dmg +0%, 방어도 90% 초과)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 1 (critical dmg +5%, 방어도 80% 초과 90% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 2 (critical dmg +10%, 방어도 70% 초과 80% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 3 (critical dmg +15%, 방어도 60% 초과 70% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 4 (critical dmg +20%, 방어도 50% 초과 60% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 5 (critical dmg 25%, 방어도 40% 초과 50% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 6 (critical dmg +30%, 방어도 30% 초과 40% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 7 (critical dmg +35%, 방어도 20% 초과 30% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 8 (critical dmg +40%, 방어도 10% 초과 20% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 9 (critical dmg +45%, 방어도 0% 초과 10% 이하)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <RadioButton
                    android:id="@+id/rdoPush11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revel 10 (critical dmg +50%, 방어도 0%)"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="3dp">

        <Button
            android:id="@+id/btnDPS"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="DPS"
            android:textSize="20sp"
            android:background="@drawable/buttoncustom"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btnDemageSimul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="데미지 시뮬"
            android:textSize="20sp"
            android:background="@drawable/buttoncustom"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>